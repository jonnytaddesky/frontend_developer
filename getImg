async function getWordRandom() {
  await fetch("https://random-word-api.herokuapp.com/word?number=1")
    .then((response) => {
      if (!response.ok) {
        throw new Error("We have problem with internet");
      }
      return response.json();
    })
    .then((data) => {
      let getImgTag = document.querySelectorAll("img");
      getImgTag.forEach((img) => {
        img.setAttribute("alt", data);
        img.style.border = "2px solid red";
      });
    })
    .catch((error) => {
      console.log("There was a problem with the fetch operation: ", error);
    });
}

getWordRandom();
